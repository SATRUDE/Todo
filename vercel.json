{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": "vite",
  "crons": [
    {
      "path": "/api/reminders",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/calendar/sync-cron",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/generate-tasks",
      "schedule": "0 23 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

